{
    "version": 2,
    "name": "e_learning_platform",
    "builds": [
        {
            "src": "e_learning_platform/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static",
            "config": {
                "distDir": "e_learning_platform/static"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "e_learning_platform/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        }
    ]
}